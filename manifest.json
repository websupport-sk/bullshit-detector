{

  "manifest_version": 2,
  "name": "Bullshit Detector",
  "version": "1.0",

  "description": "Chráňte vašich blízkych pred nedôveryhodným obsahom",

  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
},

"browser_action": {
      "default_icon": "icons/icon128.png",
      "default_popup": "assets/dialog/dialog.html"

    },

    "permissions": [ "<all_urls>", "tabs", "activeTab", "proxy", "contextMenus" ],

    "short_name": "Bullshit Detector",

    "background": {
        "scripts": ["domains.js", "tools.js", "background.js", "show_warning.js"]
    }

}
