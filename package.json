    "lint:fix": "eslint ./src '**/*.ts' --fix"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.225",
    "@types/node": "^20.8.9",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  }
}
