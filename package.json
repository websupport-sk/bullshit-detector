{
  "name": "bullshit-detector",
  "homepage": "https://github.com/websupport-sk/bullshit-detector#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/websupport-sk/bullshit-detector.git"
  },
  "bugs": {
